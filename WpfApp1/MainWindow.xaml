<Window x:Class="WpfApp1.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:WpfApp1"
xmlns:controls="clr-namespace:WpfApp1.Controls"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
mc:Ignorable="d"
TextElement.Foreground="{DynamicResource MaterialDesignBody}"
TextElement.FontWeight="Regular"
TextElement.FontSize="13"
TextElement.FontFamily="Segoe UI, Calibri, Arial"
TextOptions.TextFormattingMode="Ideal"
TextOptions.TextRenderingMode="Auto"
FontFamily="Segoe UI, Calibri, Arial"
Height="700" Width="1000"
WindowStartupLocation="CenterScreen"
Icon="pack://application:,,,/Images/calendar.ico"
Title="Assignment Manager">
<Window.Resources>
    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Grid x:Name="GridRoot" Width="{TemplateBinding Width}" Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.00001*"/>
                        </Grid.RowDefinitions>
                        <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true">
                            <Track.Thumb>
                                <Thumb x:Name="Thumb" Background="{DynamicResource MaterialDesignBodyLight}" Style="{x:Null}">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                            <Rectangle x:Name="Rectangle" Fill="{TemplateBinding Background}" RadiusX="6" RadiusY="6" Margin="2"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false"/>
                            </Track.IncreaseRepeatButton>
                            <Track.DecreaseRepeatButton>
                                <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false"/>
                            </Track.DecreaseRepeatButton>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                            <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource SecondaryHueMid}"/>
                        </Trigger>
                        <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                            <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource SecondaryHueMid}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DarkDatePickerStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="CalendarStyle">
            <Setter.Value>
                <Style TargetType="Calendar">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="4" Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PART_TextBox" 
                                     Grid.Column="0"
                                     Background="{TemplateBinding Background}"
                                     Foreground="{TemplateBinding Foreground}"
                                     FontFamily="{TemplateBinding FontFamily}"
                                     FontSize="{TemplateBinding FontSize}"
                                     BorderThickness="0"
                                     Padding="12,10,8,10"
                                     TextAlignment="Left"
                                     Cursor="IBeam"
                                     VerticalContentAlignment="Center"/>
                            <Button x:Name="PART_Button" Grid.Column="1" 
                                    Background="Transparent"
                                    Foreground="{TemplateBinding Foreground}"
                                    Padding="8,0"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Focusable="False">
                                <Button.Content>
                                    <materialDesign:PackIcon Kind="Calendar" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button.Content>
                            </Button>
                            <Popup x:Name="PART_Popup" PlacementTarget="{Binding ElementName=PART_TextBox}" IsOpen="{TemplateBinding IsDropDownOpen}" StaysOpen="False">
                                <Calendar x:Name="PART_Calendar" Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1"/>
                            </Popup>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                        <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="border" Property="Background" Value="#3A3A4A"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="border" Property="Background" Value="#2A2A3A"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Window.Resources>
<Window.Background>
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1E1E2E" Offset="0"/>
        <GradientStop Color="#2A2A3E" Offset="0.5"/>
        <GradientStop Color="#1F1F2E" Offset="1"/>
    </LinearGradientBrush>
</Window.Background>
    
<Grid>
<Grid.RowDefinitions>
    <RowDefinition Height="*"/>
    <RowDefinition Height="Auto"/>
</Grid.RowDefinitions>

<!-- Main Content -->
<Grid Grid.Row="0">
    <!-- TabControl for different views -->
    <TabControl Padding="0" Background="Transparent" BorderThickness="0">
            <!-- Calendar View Tab -->
            <TabItem Header="Calendar View" Padding="16,8">
                <Grid Background="Transparent" Margin="16">
                    <controls:CustomCalendar x:Name="CustomCalendar" Assignments="{Binding Assignments}" SelectedAssignment="{Binding SelectedAssignment}" AssignmentClicked="CustomCalendar_AssignmentClicked" CreateAssignment="CustomCalendar_CreateAssignment"/>
                </Grid>
            </TabItem>

            <!-- Assignment Overview Tab -->
            <TabItem Header="Assignments" Padding="16,8">
                <Grid Background="Transparent" Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Create Button Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="+" Click="CreateNewAssignmentButton_Click"
                                Background="{DynamicResource SecondaryHueMid}"
                                Foreground="{DynamicResource MaterialDesignBody}"
                                Height="40"
                                Width="40"
                                FontSize="24"
                                FontWeight="Bold"
                                FontFamily="Segoe UI"
                                Cursor="Hand"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"/>
                        <TextBlock Text="Create New Assignment" Margin="12,0,0,0" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                    </StackPanel>
                    
                    <!-- Assignments List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Assignments}" Background="Transparent">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="assignmentCardBorder" Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8" Margin="0,0,0,12" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" MouseLeftButtonDown="AssignmentCard_MouseLeftButtonDown" Tag="{Binding}" Cursor="Hand">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="assignmentCardBorder" Storyboard.TargetProperty="Background.Color" To="#2A2A3A" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <Grid Margin="16">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding LectureSection}" Foreground="{DynamicResource MaterialDesignBodyLight}" FontSize="12" Margin="0,4,0,0" FontFamily="Segoe UI"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:MMM d, yyyy}'}" Foreground="{DynamicResource SecondaryHueMid}" FontSize="12" FontWeight="SemiBold" FontFamily="Segoe UI" TextAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock Grid.Row="1" Text="{Binding Description}" Foreground="{DynamicResource MaterialDesignBodyLight}" FontSize="11" Margin="0,8,0,12" TextWrapping="Wrap" FontFamily="Segoe UI"/>
                                            <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                    Background="Transparent"
                                                    Foreground="{DynamicResource SecondaryHueMid}"
                                                    Height="32"
                                                    Width="32"
                                                    Cursor="Hand"
                                                    Click="EditAssignmentButton_Click"
                                                    Tag="{Binding}"
                                                    Style="{x:Null}">
                                                <Button.Content>
                                                    <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button.Content>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="true">
                                                                <Setter TargetName="border" Property="Background" Value="#3A3A4A"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="true">
                                                                <Setter TargetName="border" Property="Background" Value="#2A2A3A"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings" Padding="16,8">
                <Grid Background="Transparent">
                    <controls:SettingsPanel x:Name="SettingsPanel" SyncCompleted="SettingsPanel_SyncCompleted"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
    
    <!-- Edit/Details Popup -->
    <Border x:Name="EditPopup" Panel.ZIndex="110" Visibility="Collapsed"
            Background="{DynamicResource MaterialDesignCardBackground}" 
            CornerRadius="8"
            BorderBrush="#FFFFFF40"
            BorderThickness="1"
            Width="500" 
            Height="600"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Popup Header -->
            <Grid Grid.Row="0" Margin="24,16,24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="PopupTitle" Text="Assignment Details" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Background="Transparent" Foreground="{DynamicResource MaterialDesignBodyLight}" Cursor="Hand" Click="ClosePopup_Click" Width="32" Height="32" Padding="0" Style="{x:Null}">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#3A3A4A"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#2A2A3A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Popup Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                <StackPanel x:Name="PopupContent" Orientation="Vertical"/>
            </ScrollViewer>

            <!-- Popup Buttons -->
            <Border Grid.Row="2" Padding="16" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="PopupDeleteButton" Grid.Column="0" Content="Delete Assignment" 
                        Click="PopupDeleteButton_Click"
                        Background="#C62828"
                        Foreground="White"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Padding="12,8"
                        Style="{x:Null}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                    <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#A01E1E"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#801A1A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Content="Cancel" 
                        Click="PopupCancel_Click"
                        Background="Transparent"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        Padding="12,8"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Style="{x:Null}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                    <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#3A3A4A"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#2A2A3A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="3" x:Name="PopupSaveButton" Content="Save" 
                        Click="PopupSave_Click"
                        Background="{DynamicResource SecondaryHueMid}"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        Padding="12,8"
                        Style="{x:Null}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                    <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#FF9800"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#E68900"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
     </Border>

    <!-- Delete Confirmation Popup -->
    <Border x:Name="DeleteConfirmPopup" Panel.ZIndex="120" Visibility="Collapsed" 
            Background="{DynamicResource MaterialDesignCardBackground}" 
            CornerRadius="8"
            BorderBrush="#FFFFFF40"
            BorderThickness="1"
            Width="400" 
            Height="Auto"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Confirm Popup Header -->
            <Grid Grid.Row="0" Margin="24,16,24,16">
                <TextBlock Text="Confirm Delete" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI" VerticalAlignment="Center"/>
            </Grid>

            <!-- Confirm Popup Content -->
            <TextBlock Grid.Row="1" x:Name="DeleteConfirmMessage" Margin="24,0,24,24" FontSize="14" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI" TextWrapping="Wrap"/>

            <!-- Confirm Popup Buttons -->
            <Border Grid.Row="2" Padding="16" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Content="Cancel" 
                        Click="DeleteConfirmCancel_Click"
                        Background="Transparent"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Padding="12,8"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Style="{x:Null}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                    <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#3A3A4A"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#2A2A3A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Content="Delete" 
                        Click="DeleteConfirmYes_Click"
                        Background="#C62828"
                        Foreground="White"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Padding="12,8"
                        Style="{x:Null}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                    <ContentPresenter Focusable="False" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#A01E1E"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="#801A1A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
    
    <!-- Notification Bar -->
    <Border Grid.Row="1" x:Name="NotificationBar" Background="{DynamicResource SecondaryHueMid}" Padding="16" Height="Auto" Visibility="Collapsed">
        <TextBlock x:Name="NotificationText" Text="" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI" VerticalAlignment="Center"/>
    </Border>

    <!-- Overlay for Popup -->
    <Grid x:Name="PopupOverlay" Background="#75000000" Visibility="Collapsed" Panel.ZIndex="100" Grid.Row="0" Grid.RowSpan="2" IsHitTestVisible="False" />
</Grid>
</Window>


