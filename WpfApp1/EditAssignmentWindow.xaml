<Window x:Class="WpfApp1.EditAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Segoe UI, Calibri, Arial"
        Title="Edit Assignment" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignCardBackground}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Padding="16" Background="{DynamicResource SecondaryHueMid}" Grid.Row="0">
            <TextBlock x:Name="HeaderTitle" Text="Edit Assignment" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Assignment Name" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                <TextBox x:Name="NameTextBox" Text="{Binding CurrentAssignment.Name, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12,10" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Margin="0,0,0,14"
                         Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>

                <TextBlock Text="Lecture Section" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                <TextBox Text="{Binding CurrentAssignment.LectureSection, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12,10" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Margin="0,0,0,14"
                         Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>

                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                <TextBox Text="{Binding CurrentAssignment.Description, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="100"
                         VerticalAlignment="Top"
                         Padding="12,10"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Margin="0,0,0,14"
                         Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>

                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                        <TextBlock Text="Due Date" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                        <DatePicker SelectedDate="{Binding CurrentAssignment.DueDate, UpdateSourceTrigger=PropertyChanged}"
                                    Padding="12,10"
                                    Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                        <TextBlock Text="Due Time" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                        <materialDesign:TimePicker SelectedTime="{Binding CurrentAssignment.DueTime, UpdateSourceTrigger=PropertyChanged}"
                                                    Padding="12,10" 
                                                    Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Submission URL (Optional)" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"/>
                <TextBox Text="{Binding CurrentAssignment.SubmissionUrl, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12,10" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Margin="0,0,0,20"
                         Background="{DynamicResource MaterialDesignCardBackground}" Foreground="{DynamicResource MaterialDesignBody}" FontFamily="Segoe UI"
                         materialDesign:HintAssist.Hint="https://example.com"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Padding="16" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="DeleteButton" Grid.Column="0" Content="Delete Assignment" 
                        Click="DeleteButton_Click"
                        Background="#C62828"
                        Foreground="White"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Padding="12,8"/>

                <Button Grid.Column="2" Content="Cancel" 
                        Click="CancelButton_Click"
                        Background="Transparent"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        Padding="12,8"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"/>

                <Button Grid.Column="3" x:Name="SaveButton" Content="Save" 
                        Click="SaveButton_Click"
                        Background="{DynamicResource SecondaryHueMid}"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Height="40"
                        FontSize="12"
                        FontWeight="SemiBold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        Padding="12,8"/>
            </Grid>
        </Border>
    </Grid>
</Window>
